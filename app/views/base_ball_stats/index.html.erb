
<title>Base Ball Stats</title>

<table id="example" class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th scope="col">Playe Name</th>
      <th scope="col">AVG</th>
      <th scope="col">HR</th>
      <th scope="col">RBI</th>
      <th scope="col">RUNS</th>
      <th scope="col">SBS</th>
      <th scope="col">OPS</th>
    </tr>
  </thead>
  <tbody>
    <% @base_ball_stats.each_with_index do |stat,i|%>
      <tr>
        <th scope="row"><%= i+1 %></th>
        <td><%= stat.avg %></td>
        <td><%= stat.hr %></td>
        <td><%= stat.rbi %></td>
        <td><%= stat.runs %></td>
        <td><%= stat.sbs %></td>
        <td><%= stat.ops %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%== pagy_bootstrap_nav(@pagy) %>
<script>
  $(document).ready(function() {
    $('#example').DataTable();
} );
</script>